{
  "name": "example-react-monorepo",
  "version": "1.0.0",
  "author": "",
  "devDependencies": {
    "concurrently": "latest"
  },
  "description": "MERN Stack monorepo with Bun package management",
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "react",
    "express",
    "mongodb",
    "nodejs",
    "mern",
    "bun",
    "monorepo"
  ],
  "license": "MIT",
  "private": true,
  "scripts": {
    "update-to-latest": "bun update-to-latest.js",
    "setup:monorepo": "bun setup-structure.js monorepo",
    "setup:separate": "bun setup-structure.js separate",
    "dev": "concurrently \"cd client && bun run dev\" \"cd server-ts && bun run dev\"",
    "dev:client": "bun --prefix client run dev",
    "dev:server": "bun --prefix server-ts run dev",
    "build": "bun --prefix client run build",
    "start": "bun --prefix server-ts run start",
    "test": "bun --prefix client run test",
    "clean": "rm -rf client/node_modules server-ts/node_modules node_modules client/bun.lock server-ts/bun.lock bun.lock"
  },
  "type": "module",
  "workspaces": [
    "client",
    "server-ts"
  ]
}
